pipeline {
    agent any

    stages {
        stage('Check Out') {
            steps {
                checkout scm
                echo 'Success : Git Check Out'
            }
        }

        stage('Build') {
            steps {
                sh './gradlew clean build'
                echo 'Success : build'
            }
        }

        stage('Test') {
            steps {
                sh './gradlew test'
                echo 'Success : test'
            }
        }
    }
}
